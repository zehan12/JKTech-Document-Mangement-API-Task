generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      Role       @default(VIEWER)
  documents Document[]
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  userId      String
  user        Users    @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}
